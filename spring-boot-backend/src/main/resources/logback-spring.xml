<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 文件输出 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/certification-monitor.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/certification-monitor.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 彻底关闭Hibernate SQL日志 -->
    <logger name="org.hibernate.SQL" level="OFF" additivity="false"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="OFF" additivity="false"/>
    <logger name="org.hibernate.type.descriptor.sql" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.jdbc" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.jdbc.spi" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.jdbc.env.internal" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.jdbc.env.spi" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.jdbc.internal" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.transaction.internal" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.transaction.spi" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine" level="OFF" additivity="false"/>
    <logger name="org.hibernate.persister" level="OFF" additivity="false"/>
    <logger name="org.hibernate.loader" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.jdbc.batch" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.jdbc.batch.internal" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine.jdbc.batch.spi" level="OFF" additivity="false"/>

    <!-- 应用日志级别 -->
    <logger name="com.certification" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Spring框架日志 -->
    <logger name="org.springframework.web" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Druid日志 -->
    <logger name="com.alibaba.druid" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- 根日志级别 -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
